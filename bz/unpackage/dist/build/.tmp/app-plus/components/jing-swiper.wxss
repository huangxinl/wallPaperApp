.itemImg {
  position: absolute;
  width: 95%;
  /* height: 380rpx; */
  height: 255rpx;
  border-radius: 15rpx;
  z-index: 5;
  opacity: 0.7;
  top: 5%;
  -webkit-box-shadow: 0px 4rpx 15rpx 0px rgba(153, 153, 153, 0.24);
          box-shadow: 0px 4rpx 15rpx 0px rgba(153, 153, 153, 0.24);
}
.swiperactive {
  width: 95%;
  opacity: 1;
  z-index: 10;
  /* height: 430rpx; */
  height: 287rpx;
  top: 0%;
  -webkit-transition: all .2s ease-in 0s;
  -o-transition: all .2s ease-in 0s;
  transition: all .2s ease-in 0s;
}
